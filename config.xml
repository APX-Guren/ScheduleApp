<?xml version='1.0' encoding='utf-8'?>
<widget id="com.yourname.scheduleapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Schedule</name>
  <description>Schedule app converted from HTML</description>
  <author email="you@example.com">Your Name</author>

  <!-- Android target for Android 11 -->
  <preference name="android-targetSdkVersion" value="30" />
  <preference name="android-minSdkVersion" value="21" />
  <preference name="DisallowOverscroll" value="true"/>

  <!-- Allow navigation to local files -->
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />

  <!-- Local Notification plugin -->
  <plugin name="cordova-plugin-local-notification" spec="^0.9.0" />

  <!-- Optional: if you want the app to include cordova-plugin-whitelist -->
  <plugin name="cordova-plugin-whitelist" spec="^1.3.4" />

  <platform name="android">
    <!-- (Optional) custom Android config can go here -->
  </platform>
</widget>